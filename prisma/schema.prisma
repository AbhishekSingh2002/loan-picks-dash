// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum LoanType {
  PERSONAL
  EDUCATION
  HOME
  VEHICLE
  CREDIT_LINE
  DEBT_CONSOLIDATION
}

enum DisbursalSpeed {
  FAST
  STANDARD
  SLOW
}

enum DocsLevel {
  MINIMAL
  STANDARD
  EXTENSIVE
}

model Product {
  id                  String         @id @default(uuid())
  name                String
  bank                String
  type                LoanType
  rateApr             Float          @map("rate_apr")
  minIncome           Int            @map("min_income")
  minCreditScore      Int            @map("min_credit_score")
  tenureMinMonths     Int            @map("tenure_min_months") @default(6)
  tenureMaxMonths     Int            @map("tenure_max_months") @default(60)
  processingFeePct    Float          @map("processing_fee_pct") @default(0)
  prepaymentAllowed   Boolean        @map("prepayment_allowed") @default(true)
  disbursalSpeed      DisbursalSpeed @map("disbursal_speed") @default(STANDARD)
  docsLevel           DocsLevel      @map("docs_level") @default(STANDARD)
  summary             String?
  faq                 Json           @default("[]")
  terms               Json           @default("{}")
  matchScore          Int?           @map("match_score")
  createdAt           DateTime       @default(now()) @map("created_at")
  updatedAt           DateTime       @updatedAt @map("updated_at")
  chatMessages        ChatMessage[]

  @@index([rateApr])
  @@index([minIncome])
  @@index([minCreditScore])
  @@index([bank])
  @@index([type])
  @@index([matchScore])
  @@map("products")
}

model User {
  id                 String         @id @default(uuid())
  email              String         @unique
  name               String?
  emailVerified      DateTime?      @map("email_verified")
  image              String?
  accounts           Account[]
  chatMessages       ChatMessage[]
  sessions           Session[]
  creditScore        Int?           @map("credit_score")
  monthlyIncome      Int?           @map("monthly_income")
  preferredLoanType  LoanType?      @map("preferred_loan_type")
  createdAt          DateTime       @default(now()) @map("created_at")
  updatedAt          DateTime       @updatedAt @map("updated_at")

  @@map("users")
}

model Account {
  id                 String    @id @default(uuid())
  userId             String    @map("user_id")
  type               String
  provider           String
  providerAccountId  String    @map("provider_account_id")
  refresh_token      String?   @db.Text
  access_token       String?   @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?   @db.Text
  session_state      String?
  user               User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model ChatMessage {
  id          String   @id @default(uuid())
  content     String
  role        String   // 'user' or 'assistant'
  productId   String   @map("product_id")
  userId      String   @map("user_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  product     Product  @relation(fields: [productId], references: [id])
  user        User     @relation(fields: [userId], references: [id])

  @@index([productId])
  @@index([userId])
  @@index([createdAt])
  @@map("chat_messages")
}